<%= error_messages_for 'user' %>
<% if flash[:error] -%>
    <h2 class="error"><%= flash[:error] %></h2>
<% elsif flash[:notice] -%>
    <h2 class="notice"><%= flash[:notice] %></h2>
<% end -%>

<label for="user_email"><%= 'Email' %></label><br />
<%= text_field 'user', 'email' %><br />

<label for="user_first_name"><%= 'Jméno' %></label><br />
<%= text_field 'user', 'first_name' %><br />

<label for="user_last_name"><%= 'Příjmení' %></label><br />
<%= text_field 'user', 'last_name' %><br />

<label for="user_phone"><%= 'Telefon' %></label><br />
<%= text_field 'user', 'phone' %><br />
