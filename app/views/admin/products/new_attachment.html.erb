<% form_for :attachment, :url => { :action => "upload_attachment", :product_id => @product.id, :authenticity_token => form_authenticity_token } do %>  
  <%= file_field_tag 'attachment' %>
    
  <script type="text/javascript">
  $(function(){
    $('#attachment').fileUploader({
    imageLoader: '/images/image_upload.gif',
    allowedExtension: ''
    });
  });
  </script>
  
  <input type="submit" value="Upload" id="pxUpload" />
  <input type="reset" value="Clear" id="pxClear" />
  
  <%= submit_tag 'Submit' %>
<% end %>
<br />
<%= link_to 'Edit', {:action => 'edit',:id => @product.id} %> |
<%= link_to 'Back', :action => 'index' %>
