<div class="editation_menu"> 
  <%= link_to 'New product', :action => 'new' %>
</div>
<script type="text/javascript" charset="utf-8">
			$(document).ready(function() {
				$('#products').dataTable();
			} );
</script>	  
<table table cellpadding="0" cellspacing="0" border="0" class="display" id="products">
  <thead>
   <tr>    
    <th> Name </th>  
    <th> Price </th>
    <th>link</th>
    <th>link</th>
    <th>link</th>
    <th>link</th>
   </tr>
  </thead>
  <tbody>
  <% for product in @products -%>
  <tr>
    <td><%= link_to (h truncate product.name), { :action => 'show', :id => product.id  } %></td>    
    <td><%= number_to_usd(product.price) %></td>
    <td><%= link_to 'Show', {:action => 'show',:id => product.id} %></td>
    <td><%= link_to 'Edit', {:action => 'edit', :id => product.id} %></td>    
    <td><%= link_to 'Destroy', {:action => 'destroy',:id => product.id}, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to('Categories', {:action => 'show_categories', :product_id => product.id },  {:title => 'Categories for product'} )  %></td>
  </tr>
  <% end %>
  </tbody>
</table>

