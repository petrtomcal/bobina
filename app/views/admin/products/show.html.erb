<table class="show-table" cellpadding="0" cellspacing="0">
  <tr>
    <th>Název</th>
    <td><%= @product.name %></td>
  </tr>
</table>
<br/>

<h2>Attachments</h2>
<table class="show-table" cellpadding="0" cellspacing="0">
  <% @product.attachments.each do |attachment| -%>
    <tr>
      <th>Název</th>
      <td><%= attachment.file_file_name %></td>
    </tr>
  <% end -%>
</table>
<br/>

<%= link_to('download', :action => 'download', :product_id => @product.id) %>
<%= link_to 'Edit', {:action => 'edit',:id => @product.id} %> |
<%= link_to 'Back', :action => 'index' %>|
<%= link_to 'Add  file to product', :action => 'new_attachment', :product_id => @product.id %>