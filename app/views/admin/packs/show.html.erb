<h2>Package</h2>
<table class="show-table" cellpadding="0" cellspacing="0">
  <tr>
    <th>Package name</th>
    <td><%= @pack.name %></td>
  </tr>
</table>
<br/>
<table class="show-table" cellpadding="0" cellspacing="0">
  <tr>    
    <th>Description</th>
    <td><%= @pack.description %></td>
    <th>Link for your page</th>
    <% if @pack.weblink %>
      <td><%= h @pack.weblink %></td>
    <% else %>
      <td><%= link_to('Generate link for your page.', :action => 'generate_link', :id => @pack.id) %></td>
    <% end %>
  </tr>
</table>
<br/>
<br/>

<h2>Products</h2>
<table class="show-table" cellpadding="0" cellspacing="0">
  <% @pack.products.each do |product| -%>
    <tr>
      <th>Name</th>
      <td><%= product.name %></td>      
      <th>Delete from package</th>
      <td><%= link_to 'Delete', {:action => 'del_product_from_pack', :pack_id => @pack.id, :product_id => product.id} %></td>
    </tr>
  <% end -%>  
</table>
<br/>

<%= link_to 'Edit', {:action => 'edit',:id => @pack.id} %> |
