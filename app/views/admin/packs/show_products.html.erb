<h1>Products in package: <%= @pack.name %></h1>
<div class="sub-list">
  <h2>Package has these products</h2>
  <table class="common-table" cellpadding="0" cellspacing="0">
  <th>Name</th>
  <th></th>
  <% even = 0
   for pp in @packs_product
     even+=1 -%>
    <tr <%= "class=\"even\"" if (even % 2)==0 %>>
      <td><%= pp.name %></td>
      <td class="links">
        <%= link_to 'Delete', { :action => 'del_product_from_pack', :pack_id => @pack.id, :product_id => pp.id } %>
      </td>
    </tr>
  <% end %>
  </table>
</div>
<br/>
<div class="sub-list">
  <h2>Products possible add to package</h2>
  <table class="common-table" cellpadding="0" cellspacing="0">
  <th>Name</th>
  <th></th>
  <% even = 0
   for product in @product_all
     even+=1 -%>
    <tr <%= "class=\"even\"" if (even % 2)==0 %>>
      <td><%= product.name %></td>
      <td class="links">
        <%= link_to 'Add', { :action => 'add_product_to_pack', :pack_id => @pack.id, :product_id => product.id } %>
      </td>
    </tr>
  <% end %>
  </table>
</div>
<%= link_to 'Back', :action => 'index' %>