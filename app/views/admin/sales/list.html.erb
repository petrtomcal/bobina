<%= javascript_include_tag 'jquery', 'jquery.dataTables' %>    
<div class="editation_menu"> 
  <%= link_to('graph', { :controller => 'sales', :action => 'index' } )  %>
  <%= link_to('sales', { :controller => 'sales', :action => 'list' } )  %>
</div>
<div class="sub-list"><script type="text/javascript" charset="utf-8">
			$(document).ready(function() {
				$('#sales').dataTable();
			} );
</script>	  
<table table cellpadding="0" cellspacing="0" border="0" class="display" id="sales">
  <thead>
   <tr>    
    <th> Sale ID</th>  
    <th> ID </th>    
   </tr>
  </thead>
  <tbody>
  <% for sale in @sales -%>
  <tr>
    <td><%= link_to (sale.id), { :action => 'show', :id => sale.id  } %></td>    
    <td><%= if User.find(sale.user_id).email.nil       
              "de"
            else
              User.find(sale.user_id).email
            end
      %></td>
  </tr>
  <% end %>
  </tbody>
</table>

<br />



