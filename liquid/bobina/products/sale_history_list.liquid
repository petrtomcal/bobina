<div class="sub-list">
<table class="common-table" cellpadding="0" cellspacing="0">
  <thead>
   <tr>    
      <th colspan="5">&nbsp;</th>
   </tr>
  </thead>
{% for sale in sales %}
{% if sale.user_id != nil %}
  <tr>
    <td>{{ sale.id }}</td>
    <td>{{ sale.created_at }}</td>
    <td>{{ sale.purchased_at }}</td>
    {% if sale.paid == 1 %}
      <td>{{ sale.token }}</td>
    {% endif %}  
    <td>
    link to details
    </td>    
  </tr>
{% endif %}  
{% endfor %}    
</table>