<div class="sub-list">
<table class="common-table" cellpadding="0" cellspacing="0">
  <thead>
   <tr>    
      <th colspan="5">&nbsp;</th>
   </tr>
  </thead>
{% for product in products %}
  <tr>
    <td>{{ product.id }}</td>
    <td>{{ product.name | truncate: 20 }}</td>
    <td>{{ product.price|number_to_czk }}</td>
    <td>{{ product.category_id }}</td>
    <td>attachment<br />    
    <a href="/products/show/{{product.id}}">show</a>
    <a href="/carts/create/{{product.id}}">add to cart</a>
    </td>    
  </tr>
{% endfor %}    
</table>

<br/>
<div class="sub-list">
<table class="common-table" cellpadding="0" cellspacing="0">
  <thead>
   <tr>    
      <th colspan="5">&nbsp;</th>
   </tr>
  </thead>
{% for item in cart.get_items %}
  <tr>
    <td>{{ item.name | truncate: 20 }}</td>
    <td>{{ item.price|number_to_czk }}</td>
    <td>{{ item.count }}</td>
    <td>
    <a href="/carts/destroy/{{item.id}}">destroy</a>    
    </td>    
  </tr>
{% endfor %}    
